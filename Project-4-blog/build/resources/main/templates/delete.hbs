{{#partial "content"}}
    {{#if entry}}
        <div class="sign-in">
            <form action="/details/delete/{{entry.slug}}" method="post">
                <h1 id="entry">{{entry.title}}</h1>
                <p>You're about to delete the entry!  Are you sure you want to delete this entry?</p>
                <button type="submit">Yes</button>
                <button type="button">No</button>
            </form>
        </div>
    {{/if}}
{{/partial}}

{{> base.hbs}}